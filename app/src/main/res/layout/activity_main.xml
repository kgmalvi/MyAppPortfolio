<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#D5F1EF"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myappportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps!!!"
        android:textColor="#13073A"
        android:textSize="20sp" />

    <Space
        android:layout_width="20px"
        android:layout_height="50px" />

    <Button
        android:id="@+id/btnSoptStream"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:background="#877CB0"
        android:text="Spotify Streamer" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px" />

    <Button
        android:id="@+id/btnScoreApp"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:background="#877CB0"
        android:text="Scores App" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px" />

    <Button
        android:id="@+id/btnLibraryApp"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:background="#877CB0"
        android:text="Library App" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px" />

    <Button
        android:id="@+id/btnBuildItBigger"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:background="#877CB0"
        android:text="Build It Bigger" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px" />

    <Button
        android:id="@+id/btnBaconReader"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:background="#877CB0"
        android:text="Bacon Reader" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px" />

    <Button
        android:id="@+id/btnCapstone"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:background="#3C7113"
        android:text="Capstone: My Own App" />
</LinearLayout>
